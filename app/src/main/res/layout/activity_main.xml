<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context=".MainActivity">


    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/p"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MainActivity"
        tools:ignore="MissingConstraints,RedundantNamespace"
        tools:layout_conversion_absoluteHeight="731dp"
        tools:layout_conversion_absoluteWidth="411dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="96dp"
                android:layout_height="52dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:contentDescription=""
                app:srcCompat="@drawable/final_pic_haris"
                tools:ignore="ContentDescription" />

            <TextView

                android:id="@+id/textView2"
                android:layout_width="246dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/almendra_sc"
                android:gravity="center"
                android:text="@string/haris_tallat"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivedit_contacts"
                android:layout_width="52dp"
                android:layout_height="57dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button"
                android:contentDescription="edit"
                android:padding="10dp"
                app:srcCompat="@drawable/update"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints=""
            android:background="@drawable/edit_search"
            android:drawableStart="@drawable/search"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/searching"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/bevan"
            android:text="@string/favourite_contacts"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="373dp"
            android:layout_height="81dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1cc5dc"

            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="81dp"

                android:background="@drawable/p"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/juni"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/talha"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/umer" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/madni" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"

            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:text="All contacts "
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:contentDescription="@string/fb"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:pressedTranslationZ="12dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat"
        tools:layout_conversion_absoluteHeight="74dp"
        tools:layout_conversion_absoluteWidth="74dp"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>